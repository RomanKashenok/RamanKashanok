<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
            android:id="@+id/on"
            android:state_activated="true">
        <bitmap
                android:src="@drawable/sova_anmation_3"/>
    </item>

    <item
            android:id="@+id/off">
        <bitmap
                android:src="@drawable/sova_anmation_1"/>
    </item>

    <transition
            android:fromId="@+id/on"
            android:toId="@+id/off"
            android:drawable="@drawable/owl_animation_eyes_closing">
    </transition>

    <transition
            android:fromId="@id/off"
            android:toId="@id/on"
            android:drawable="@drawable/owl_animation_eyes_closing">
    </transition>

</animated-selector>