<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_9dp">

    <TextView
            android:id="@+id/textViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="@string/loren_ipsum"
            android:textSize="@dimen/text_size_28_sp"
            android:background="@drawable/button_selector"
            android:visibility="visible"/>

    <Button
            android:id="@+id/buttonViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewId"
            android:text="@string/change_button"
            android:textSize="@dimen/text_size_28_sp"
            android:background="@drawable/button_selector"
            android:visibility="visible"/>

    <com.kashanok.classes.classwork.cw4.MyView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonViewId">


    </com.kashanok.classes.classwork.cw4.MyView>

</android.support.constraint.ConstraintLayout>