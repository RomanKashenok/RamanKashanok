<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <style name="LoginBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_bg</item>
    </style>

    <style name="HomeworkTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/homeworkTitleTextColor</item>
        <item name="android:lineSpacingExtra">@dimen/text_size_4_sp</item>
    </style>

    <style name="LoginScreenForgotPassword">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:lineSpacingExtra">@dimen/text_size_4_sp</item>
        <item name="android:fontFamily">@font/monda_regular</item>
    </style>

    <style name="LoginScreenButton">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">@dimen/dimen_52dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/signInButton</item>
        <item name="android:layout_marginTop">@dimen/dimen_large</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/monda_bold</item>
        <item name="android:textSize">@dimen/text_size_20_sp</item>
    </style>

    <style name="LoginScreenEditText">
        <item name="android:layout_height">@dimen/dimen_52dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@color/colorPrimaryTransparent</item>
    </style>

    <style name="EditTextField" parent="LoginScreenEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:padding">@dimen/dimen_9dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>