<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_background</item>
    </style>

    <style name="HomeworkTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/homework_title_text_color</item>
        <item name="android:lineSpacingExtra">@dimen/text_size_4_sp</item>
    </style>

</resources>
